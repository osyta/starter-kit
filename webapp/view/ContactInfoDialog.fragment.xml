<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
    <Dialog id="contactDialog" title="{i18n>contactDetails}">
        <VBox class="sapUiSmallMargin">
            <f:Form id="form" editable="false">
                <f:layout>
                    <f:ColumnLayout columnsM="1" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{i18n>name}">
                                <f:fields>
                                    <Text id="nameText" text="{CompanyName}" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>contactTitle}">
                                <f:fields>
                                    <Text id="contactTitleText" text="{ContactTitle}" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>address}">
                                <f:fields>
                                    <Text id="addressText" text="{Address}" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>phone}">
                                <f:fields>
                                    <Text id="phoneText" text="{Phone}" />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>
        <Panel id="panel2">
            <FlexBox id="flexbox2" justifyContent="End" alignItems="End">
                <Button type="Negative" id="closeButton" text="{i18n>close}" press=".closeDialog" />
            </FlexBox>
        </Panel>
    </Dialog>
</core:FragmentDefinition>
